<%= link_to category do %>
  <div id="<%= dom_id category %>" class="relative group">
    <% if category.image.attached? %>
      <%= image_tag category.image, class: "w-full h-80 object-cover rounded-lg group-hover:brightness-75 transition-all duration-250" %>
    <% else %>
      <div class="w-full h-80 bg-gray-200 rounded-lg"></div>
    <% end %>
    <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
      <p class="text-4xl font-bold text-white shadow-text text-center">
        <%= category.name %>
      </p>
    </div>
  </div>
<% end %>