<!-- app/views/admin_sessions/new.html.erb -->
<h2>Admin Login</h2>
<%= form_with url: admin_session_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>
